{
    "compilerOptions": {
        "declaration": true,
        "removeComments": false,
        "declarationDir": "./dist/",
        "target": "es5",
        "lib": [
            "ES2020",
            "dom",
            "dom.iterable",
            "esnext",
        ],
        "baseUrl": ".",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "types": [
            "dom",
            "cypress"
        ]
    },
    "include": [
        "src",
    ]
}